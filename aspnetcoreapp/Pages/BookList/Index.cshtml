@page
@model aspnetcoreapp.Pages.BookList.IndexModel
@{

}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2>Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-primary text-white">Add new book</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>
                            <label>Delete or Update</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>


                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>


                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>

                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" type="submit" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item ');" class="btn btn-danger text-white">Delete</button>

                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">Update</a>
                            </td>
                        </tr>
                    }
                </table>

            }
            else
            {
                <p>No Books Avaiable</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br />
        <br />


    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Process
                    </th>
                </tr>
            </thead>
        </table>

    </div>

</div>